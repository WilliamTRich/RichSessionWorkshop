<!DOCTYPE html>
<html>

<head>
    <meta charset='utf-8'>
    <title>Hello!</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

</head>

<body>
    <div class="container">
        @using RichSessionWorkshop.Models
        @model NameInput
        <h2>Welcome @Model.Username!</h2>
        @using (Html.BeginForm("ViewRes", "Home", FormMethod.Post))
        {
            <button type="submit" name="operation" value="logout" class="btn btn-danger">Log Out</button>
        }
    </div>
    <div>
        <h1>Count: @Model.Count</h1>

        @using (Html.BeginForm("ViewRes", "Home", FormMethod.Post))
        {
            <button type="submit" name="operation" value="increment">Increment</button>
            <button type="submit" name="operation" value="decrement">Decrement</button>
            <button type="submit" name="operation" value="multiply">Multiply</button>
            <button type="submit" name="operation" value="random">Random</button>
        }
    </div>
</body>

</html>